# Common Configuration
NODE_ENV=development
PORT=8080

# Node Configuration
NODE_TYPE=global_node  # global_node, regional_node, or local_node
NODE_TIER=training    # inference, aggregator, training, or feedback
REGION=us-east        # Geographic region identifier
TOKEN_BALANCE=10000   # Initial token balance

# Network Configuration
BOOTSTRAP_NODES=wss://node1.example.com,wss://node2.example.com
DHT_REFRESH_INTERVAL=60000
DHT_REPLICATION_FACTOR=3
METRICS_UPDATE_INTERVAL=15000
HEALTH_CHECK_INTERVAL=30000
WEBSOCKET_PING_INTERVAL=25000
CLEANUP_INTERVAL=300000
PEER_TIMEOUT=600000

# Resource Requirements
MIN_CPU_CORES=2
MIN_MEMORY_GB=4
MIN_STORAGE_GB=20
GPU_REQUIRED=false

# Task Configuration
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT=3600
MAX_TASK_DURATION=86400
MIN_TASK_DURATION=60
MAX_NODES_PER_TASK=100

# Security
MIN_ENCRYPTION_KEY_LENGTH=2048
MAX_MESSAGE_SIZE=5242880
MAX_CONCURRENT_CONNECTIONS=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/node.log

# Validator Requirements
REGIONAL_TOKEN_REQUIREMENT=1000
GLOBAL_TOKEN_REQUIREMENT=5000
MIN_REGIONAL_VALIDATORS=3
MIN_GLOBAL_VALIDATORS=5

# Cross-Region Configuration
MIN_ACTIVE_PEERS_RATIO=0.7
MIN_NODES_PER_REGION=2
CAPACITY_UPDATE_INTERVAL=30000

# Performance Monitoring
PARAMETER_UPDATE_INTERVAL=3600000
PARAMETER_ENDPOINT=https://api.tenzro.com/network/parameters